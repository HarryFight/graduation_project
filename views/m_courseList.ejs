<% include menu_sidebar.ejs %>

    <!-- content start -->
    <div class="admin-content">

        <div class="am-cf am-padding">
            <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">课程列表</strong> / <small>Course list</small></div>
        </div>

        <div class="am-g">
            <div class="am-u-sm-12 am-u-md-3">
                <div class="am-form-group">
                    <select data-am-selected="{btnSize: 'sm'}" id='btn_chooseType'>
                        <option value="0" actived>所有课程</option>
                        <option value="1">必修</option>
                        <option value="2">限选</option>
                        <option value="3">选修</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="am-g">
            <div class="am-u-sm-12">
                    <table class="am-table am-table-striped am-table-hover table-main">
                        <thead>
                            <tr>
                                <th class="table-id">ID</th>
                                <th class="table-title">课程名</th>
                                <th class="table-type">类别</th>
                                <th>任课教师</th>
                                <th>课程所在周</th>
                                <th>课程所在星期</th>
                                <th>课程所在节</th>
                                <th class="table-set">操作</th>
                            </tr>
                        </thead>
                        <tbody id='itemPanel'>

                        </tbody>
                    </table>
                    <div class="am-cf">
                        共 <i id='itemLen'></i> 条记录
                    </div>
                    <hr />
            </div>

        </div>
    </div>
    <!-- content end -->
    <script type='text/plain' id="itemTmpl">
    <# for(var i=0,len=data.length;i<len;i++){ #>
        <# var item = data[i] #>
        <tr>
            <td><#:= item.id #></td>
            <td><#:= item.name #></td>
            <td><#:= item.type #></td>
            <th><#:= item.teacher #></th>
            <th><#:= item.week_time #> 周</th>
            <th>星期 <#:= item.day_time #></th>
            <th>第 <#:= item.class_time #> 节</th>
            <td>
                <div class="am-btn-toolbar">
                    <div class="am-btn-group am-btn-group-xs">
                        <button class="am-btn am-btn-default am-btn-xs am-text-secondary xy-btn-a" data-id='<#:= item.id #>'><span class="am-icon-pencil-square-o"></span> 查看课程学生 </button>
                        <button class="am-btn am-btn-default am-text-danger xy-btn-delete" data-id='<#:= item.id #>'><span class="am-icon-trash-o"></span> 删除</button>
                    </div>
                </div>
            </td>
        </tr>
    <# } #>

    </script>
    <script src="http://localhost:3000/js/template.js"></script>
    <script src="http://localhost:3000/js/common.js"></script>

    <script>
    loadData(0);

    $('#btn_chooseType').change(function(){
        loadData($('#btn_chooseType').val());
    })

    $('#itemPanel').delegate('.xy-btn-delete', 'click', function(event) {
        var flag = confirm('确认要删除课程ID：'+$(this).attr('data-id'));
        if(flag){
            deleteItem($(this).attr('data-id'));
        }
    });
    $('#itemPanel').delegate('.xy-btn-a', 'click', function(event) {
        var url = prefix + 'menu/m/studentList?cid='+$(this).attr('data-id')
        location.href = url;
    });

    function loadData(type){
        $('#itemPanel').html('<p>数据加载中</p>');
        $.getJSON(prefix+"menu/m/getCourseList.do", {type:type}, function(json){
            var data = json;
            var typeMap = ['','必修','限选','选修']

            $.each(data.data,function(index,item){
                data.data[index].type = typeMap[parseInt(item.type)]
            })

            //避免和后端冲突
            template.config({sTag: '<#', eTag: '#>'});
            var itemTmpl = template($('#itemTmpl').text());
            var htmlStr = itemTmpl(data);

            $('#itemPanel').text('');
            $(htmlStr).appendTo('#itemPanel');
            $('#itemLen').text(data.data.length);
        });
    }
    function deleteItem(id){
        $.getJSON(prefix+"menu/m/deleteCourse.do", {id:id}, function(json){
            var data = json;

            alert(data.data.msg)
            loadData($('#btn_chooseType').val());
        });
    }
    </script>

    <% include menu_sidebar_end.ejs %>
